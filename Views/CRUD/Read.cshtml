@model examplemvc.Models.Post
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <h2 class="text-center">Post Details</h2>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Body</p>
                    <p class="card-text"><small class="text-muted">Created At: @Model.CreatedAt</small></p>
                    <a href="@Url.Action("HomePost")" class="btn btn-primary">Return to Menu</a>
                </div>
            </div>
        </div>
    </div>
</div>